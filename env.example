# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/CryptoDB

# Application Settings
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenRouter Configuration
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Vector Database Configuration
VECTOR_DB_TYPE=qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=
CHROMA_PERSIST_DIR=./chroma_db

# Embedding Model Configuration (Polish support)
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
EMBEDDING_PROVIDER=sentence-transformers

# Hybrid Search Configuration
USE_HYBRID_SEARCH=true
USE_QDRANT_NATIVE_BM25=true  # Use Qdrant native BM25 (sparse vectors) - recommended
HYBRID_ALPHA=0.5  # Not used with Qdrant native (Qdrant handles combination automatically)

# External API Keys
SKYSCANNER_API_KEY=your-skyscanner-api-key
AMADEUS_API_KEY=your-amadeus-api-key
AMADEUS_API_SECRET=your-amadeus-api-secret
BOOKING_COM_API_KEY=your-booking-api-key

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# File Storage
FILE_STORAGE_PATH=./storage
MAX_FILE_SIZE_MB=50

# Data Ingestion
DATA_INGESTION_OUTPUT_DIR=./data_ingestion_output

# Wikivoyage Configuration
WIKIVOYAGE_LANGUAGE=en
WIKIVOYAGE_MAX_DEPTH=1  # How many levels deep: 1 = country -> cities, 2 = country -> cities -> attractions
WIKIVOYAGE_LEVEL_1_SECTIONS=Cities,Cities and towns  # Comma-separated sections for level 1 (e.g., "Cities,Cities and towns,Municipalities")
WIKIVOYAGE_LEVEL_2_SECTIONS=See,Do  # Comma-separated sections for level 2 (e.g., "See,Do,Buy")

# Service URLs
USER_SERVICE_URL=http://localhost:8001
KNOWLEDGE_BASE_SERVICE_URL=http://localhost:8002
FLIGHT_SEARCH_SERVICE_URL=http://localhost:8003
HOTEL_BOOKING_SERVICE_URL=http://localhost:8004
TRIP_PLANNING_SERVICE_URL=http://localhost:8005
ADMIN_PANEL_SERVICE_URL=http://localhost:8006

